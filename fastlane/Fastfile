default_platform(:ios)

before_all do
    ENV["FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD"] = "tvng-tntn-ijci-zfxk"
    ENV["FASTLANE_PASSWORD"] = "Sobhy288"
  end

platform :ios do
   desc "Get certificates"
  lane :certificates do
    sync_code_signing(
      type: "appstore",
      app_identifier: ['com.squadio.buildUp'], 
      force_for_new_devices: true,
      readonly: true
    )

    # You can repeate the sync_code_signing with other types of certificates such as appstore and adhoc
    sync_code_signing(
      type: "appstore",
      app_identifier: 'com.squadio.buildUp',
      readonly: true
    )
  end

 desc "Generate new certificates"
  lane :generate_new_certificates do
    sync_code_signing(
      type: "appstore",
      app_identifier: ['com.squadio.buildUp'], 
      force_for_new_devices: true,
      readonly: false
    )
    
    # You can repeate the sync_code_signing with other types of certificates such as appstore and adhoc

  end

 desc "deploy"
  lane :deploy do
    setup_ci
    sync_code_signing(
      git_url: 'https://github.com/BuildupTeam/FastlaneSigning.git',
      verbose: true,
      type: "appstore",
      app_identifier: 'com.squadio.buildUp',
      readonly: true,
      force: true,
    )
    build_app(scheme: "BuildUp")
    app_store_connect_api_key(
	is_key_content_base64: true,
	in_house: false,
	  key_id: "Y99X6X5676",
	  issuer_id: "69a6de71-daeb-47e3-e053-5b8c7c11a4d1",
 	 key_content: ""
)
	upload_to_testflight 
  end
end
