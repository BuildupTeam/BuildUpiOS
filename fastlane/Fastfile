SdRzkDKl\n-----END PRIVATE KEY-----"
)
       capture_screenshots(workspace: “BuildUp.xcworkspace”, scheme: “BuildUpUITests”)
 end

  desc “Update App Identifier”
   lane :update_project_settings do
   require 'xcodeproj'
   project_path = '../Buildup.xcodeproj'
   project = Xcodeproj::Project.open(project_path)

  project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['PRODUCT_BUNDLE_IDENTIFIER'] =  ENV['APP_IDENTIFIER']
    end
  end

  project.save

 update_app_identifier(app_identifier: ENV['APP_IDENTIFIER'], plist_path: "BuildUp/Resources/Info.plist")
end

 desc “Change base url”
  lane:change_main_host do
    path = '../BuildUp/Services/Configuration.swift'
    re = /\s+url =(.*)/
    s = File.read(path)
    s[re, 0] = ' url = "' + ENV['RELEASE_URL'] +"\""
    f = File.new(path, 'w')
    f.write(s)
    f.close

end

 desc “update colors”
  lane:update_colors do
    change_background_color()
    change_splash_background_color()
end

 desc “change background color”
  lane:change_background_color do
    path = '../BuildUp/Base.lproj/LaunchScreen.storyboard'
    re = / key="backgroundColor"(.*)/
    s = File.read(path)
    background = ' key=“backgroundColor” red="' + ENV['RED'] + ’" green="' + ENV['GREEN’] +’" blue="‘ + ENV[‘BLUE’] +’”  alpha=“1" colorSpace="custom" customColorSpace="sRGB"/>'
    s[re, 0] = background
    f = File.new(path, 'w')
    f.write(s)
    f.close
end

desc “change splash background color”
lane:change_splash_background_color do
    path = '../BuildUp/Features/Splash/SplashViewController.xib'
    re = / key="backgroundColor"(.*)/
    s = File.read(path)
    background = ' key=“backgroundColor” red="' + ENV['RED'] + ’" green="' + ENV['GREEN’] +’" blue="‘ + ENV[‘BLUE’] +’”  alpha=“1" colorSpace="custom" customColorSpace="sRGB"/>'
    s[re, 0] = background
    f = File.new(path, 'w')
    f.write(s)
    f.close
end

 desc "Set the build number to a specific value"
  lane :set_build_number do
    increment_build_number(build_number: ENV['APP_BUILD_NUMBER']) # Set a specific build number
  end

 desc “Change base url + screenshots”
  lane:upload_app do
    change_main_host()
    update_project_settings()
    set_build_number()
    update_colors()
    deploy()
end

 desc “Update App”
  lane:update_app do
    change_main_host()
    update_project_settings()
    set_build_number()
    update_colors()
    match(type: "appstore")
    deploy()
end 

 desc "deploy"
  lane :deploy do
    setup_ci
    sync_code_signing(
      type: "appstore",
      app_identifier: ENV['APP_IDENTIFIER'],
      readonly: false
    )
    build_app(scheme: ENV['SCHEME'])
    app_store_connect_api_key(
	  key_id: "223H85GN24",
	  issuer_id: "69a6de71-daeb-47e3-e053-5b8c7c11a4d1",  	 
