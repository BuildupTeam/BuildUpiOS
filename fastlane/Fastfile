# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

before_all do
    ENV["FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD"] = ENV['FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD']
  end

platform :ios do

  desc "update_display_name"
   lane :update_display_name do 
   update_info_plist(
    plist_path: "./Buildup/Resources/Info.plist",
    xcodeproj: "./Buildup.xcodeproj",
    display_name: ENV['APP_DISPLAY_NAME']
  )
 end

desc "update_displayed_name"
lane :update_displayed_name do |options|
  # Path to the Info.plist file
  info_plist_path = "./Buildup/Resources/Info.plist"  # Update this path to the correct path of your Info.plist file

  # Update the CFBundleDisplayName in the Info.plist
  update_info_plist(
    plist_path: info_plist_path,
    block: lambda do |plist|
      plist['CFBundleDisplayName'] = ENV['APP_DISPLAY_NAME']
    end
  )

end

  desc “Update App Identifier”
   lane :update_project_settings do
   require 'xcodeproj'
   project_path = '../Buildup.xcodeproj'
   project = Xcodeproj::Project.open(project_path)

  project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['PRODUCT_BUNDLE_IDENTIFIER'] =  ENV['APP_IDENTIFIER']
    end
  end

  project.save

 update_app_identifier(app_identifier: ENV['APP_IDENTIFIER'], plist_path: "BuildUp/Resources/Info.plist")
end

 desc “Update Provisioning”
 profile_name = "AppStore_" + ENV['APP_IDENTIFIER'] + ".mobileprovision"
  lane :update_provisioning do
    update_project_provisioning(
    xcodeproj: './Buildup.xcodeproj',
    profile: profile_name,
    target_filter: '.*',
    build_configuration: 'Release',
   code_signing_identity: 'iPhone Distribution'
  )
end

desc “Change Project AppName”
  lane :update_display_name_in_xcodeproj do |options|

  project_path = '../Buildup.xcodeproj'
  project = Xcodeproj::Project.open(project_path)

  # Iterate over all build configurations to update the display name
  project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['INFOPLIST_KEY_CFBundleDisplayName'] = ENV['APP_DISPLAY_NAME']
    end
  end

  # Save the project file after modifying the build settings
  project.save
end

 desc “Change base url”
  lane:change_main_host do
    path = '../BuildUp/Services/Configuration.swift'
    re = /\s+url =(.*)/
    s = File.read(path)
    s[re, 0] = ' url = "' + ENV['RELEASE_URL'] +"\""
    f = File.new(path, 'w')
    f.write(s)
    f.close
end

desc “Change privacy Policy url”
  lane:change_privacy_policy do
    path = '../BuildUp/Services/Configuration.swift'
    re = /\s+privacyPolicyURL =(.*)/
    s = File.read(path)
    s[re, 0] = ' privacyPolicyURL = "' + ENV['RELEASE_URL'] +"\""
    f = File.new(path, 'w')
    f.write(s)
    f.close
end

desc “Change Terms Of use url”
  lane:change_terms_use do
    path = '../BuildUp/Services/Configuration.swift'
    re = /\s+termsOfUseURL =(.*)/
    s = File.read(path)
    s[re, 0] = ' termsOfUseURL = "' + ENV['RELEASE_URL'] +"\""
    f = File.new(path, 'w')
    f.write(s)
    f.close
end

 desc “update colors”
  lane:update_colors do
    change_background_color()
    change_splash_background_color()
end

 desc “change background color”
  lane:change_background_color do
    path = '../BuildUp/Base.lproj/LaunchScreen.storyboard'
    re = / key="backgroundColor"(.*)/
    s = File.read(path)
    background = ' key=“backgroundColor” red="' + ENV['RED'] + ’" green="' + ENV['GREEN’] +’" blue="‘ + ENV[‘BLUE’] +’”  alpha=“1" colorSpace="custom" customColorSpace="sRGB"/>'
    s[re, 0] = background
    f = File.new(path, 'w')
    f.write(s)
    f.close
end

desc “change splash background color”
lane:change_splash_background_color do
    path = '../BuildUp/Features/Splash/SplashViewController.xib'
    re = / key="backgroundColor"(.*)/
    s = File.read(path)
    background = ' key=“backgroundColor” red="' + ENV['RED'] + ’" green="' + ENV['GREEN’] +’" blue="‘ + ENV[‘BLUE’] +’”  alpha=“1" colorSpace="custom" customColorSpace="sRGB"/>'
    s[re, 0] = background
    f = File.new(path, 'w')
    f.write(s)
    f.close
end

 desc "Set the build number to a specific value"
  lane :set_build_number do
    increment_build_number(build_number: ENV['APP_BUILD_NUMBER']) # Set a specific build number
  end

desc "Set the version number to a specific value"
  lane :incre_version_number do
    # increment_version_number_in_xcodeproj
     increment_version_number_in_xcodeproj(
     version_number: ENV['APP_VERSION_NUMBER'],   
     xcodeproj: './BuildUp.xcodeproj',
     scheme: ENV['SCHEME']
)
  end

  lane:install_provisioning do
   sigh(
    app_identifier: ENV['APP_IDENTIFIER'],  # Your app's bundle identifier
    username: ENV['USER_NAME'] # Your Apple developer account email
  )
 end

desc “update Settings”
  lane:update_settings do
    update_project_settings()
    change_main_host()
    update_colors()
end

 desc “Change base url + screenshots”
  lane:upload_app do
    change_main_host()
    change_privacy_policy()
    change_terms_use()
    set_build_number()
    update_colors()
    update_display_name()
    update_display_name_in_xcodeproj()
    api_key = app_store_connect_api_key(
